{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["esnext.array", "esnext", "es2017", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "lib/",
    // Only necessary because @types/uglify-js can't find types for source-map
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-unknown-event": "warning"
        }
      }
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": ["custom_typings/**/*.ts", "src/**/*.ts"],
  "exclude": []
}
